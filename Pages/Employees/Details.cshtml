            @ViewBag.ReportsTO
        </dd>
    </dl>
    <img src="~/img/@Model.Employee.PhotoPath" alt="@Model.Employee.PhotoPath" width="480" height="590" />
</div>
<br />
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Employee?.EmployeeId" class="btn btn-primary">Edit</a> 
    <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@Model.Employee?.EmployeeId">Delete</a>
    <a asp-page="./Index" class="btn btn-primary">Back to List</a>
</div>
